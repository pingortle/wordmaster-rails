<h1>Hello Wordsmiths!</h1>

<%= form_with model: Game.new do |form| %>
  <%= form.label :word %>
  <br>
  <%= form.text_field :word %>
  <br>
  <%= form.label :attempt_limit %>
  <br>
  <%= form.number_field :attempt_limit %>
  <br>
  <%= form.submit %>
<% end %>

<%= button_to "Surprise Me", action: :create %>
<%= button_to "Surprise Me (3 letter word)", action: :create, params: { length: 3 } %>

<ol>
  <% @games.each do |game| %>
    <li><%= link_to game.created_at.in_time_zone("Central Time (US & Canada)").to_fs(:short), game %></li>
  <% end %>
</ol>
